#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>

#define MAX_STACK 100000

typedef struct {
    int data[MAX_STACK];
    int top;
} Stack;

void push(Stack *stack, int value) {
    stack->data[++stack->top] = value;
}

int pop(Stack *stack) {
    return stack->data[stack->top--];
}

int top(Stack *stack) {
    return stack->data[stack->top];
}

int calculate(const char *s) {
    Stack values, signs;
    values.top = signs.top = -1;
    int result = 0, num = 0, sign = 1;
    
    for (int i = 0; s[i] != '\0'; i++) {
        if (isdigit(s[i])) {
            num = num * 10 + (s[i] - '0');
        } else if (s[i] == '+' || s[i] == '-') {
            result += sign * num;
            num = 0;
            sign = (s[i] == '+') ? 1 : -1;
        } else if (s[i] == '(') {
            push(&values, result);
            push(&signs, sign);
            result = 0;
            sign = 1;
        } else if (s[i] == ')') {
            result += sign * num;
            num = 0;
            result *= pop(&signs);
            result += pop(&values);
        }
    }
    
    result += sign * num;
    return result;
}
